

	<div class="row">
        <%= form_tag("/login",class:"form-signin mg-btm") do %>
    	<h3 class="heading-desc">
		<button type="button" class="close pull-right" aria-hidden="true">×</button>
		Login to Sabook</h3>
		<div class="social-box">
			<div class="row mg-btm">
             <div class="col-md-12">
                <a href="#" class="btn btn-primary btn-block">
                  <i class="icon-facebook"></i>    Login with Facebook
                </a>
			</div>
			</div>
			<div class="row">
			<div class="col-md-12">
                <a href="#" class="btn btn-info btn-block" >
                  <i class="icon-twitter"></i>    Login with Twitter
                </a>
            </div>
          </div>
		</div>
		<div class="main">	
        <%= text_field_tag :name, params[:name],class:"form-control",placeholder:"Email",:autofocus=>true %>
        <%= password_field_tag :password,"",class:"form-control",placeholder:"Password" %>
		 
        Are you a business? <a href=""> Get started here</a>
		<span class="clearfix"></span>	
        </div>
		<div class="login-footer">
		<div class="row">
                        <div class="col-xs-6 col-md-6">
                            <div class="left-section">
								<a href="">Forgot your password?</a>
								<a href="">Sign up now</a>
							</div>
                        </div>
                        <div class="col-xs-6 col-md-6 pull-right">
                            <%= submit_tag "Login",:class => "btn btn-large btn-danger pull-right" %>
                        </div>
                    </div>
		
		</div>

       <% end %>
	</div>


