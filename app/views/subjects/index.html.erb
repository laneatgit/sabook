<p id="notice"><%= notice %></p>

<h1>Listing Subjects</h1>
<%= link_to 'New Subject', new_subject_path %>
<table>
  <thead>
    <tr>
      <!--<th>Subject type</th>-->
      <th>Name</th>
      <th>Description</th>
      <th>Amount</th>
      

    </tr>
  </thead>

  <tbody>
    <% @subjects.each do |subject| %>
      <tr>
        <!--<td><%= subject.subject_type %></td>-->
       
          <td><%=  subject.diplay_path %></td>
       
        <td><%= subject.description %></td>
        
        <% if subject.fixed %>
          <td><%= number_to_currency(subject.ledger_amount, :locale => "jp") %></td>
        <%else%>
          <td><%= link_to number_to_currency(subject.ledger_amount, :locale => "jp") , subject_entry_item_lines_path(:subject_id => subject.id) %></td>
        <%end%>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>


