<p id="notice"><%= notice %></p>

<h1>Listing Subjects</h1>
<%= link_to 'New Subject', new_subject_path %>
<table>
  <thead>
    <tr>
      <!--<th>Subject type</th>-->
      <th>Name</th>
      <th>Description</th>
      <th>Amount</th>
      <th>Sort Order</th>
      <th colspan="3"></th>

    </tr>
  </thead>

  <tbody>
    <% @subjects.each do |subject| %>
      <tr>
        <!--<td><%= subject.subject_type %></td>-->
       
          <td><%=  subject.display_path %></td>
       
        <td><%= subject.description %></td>
        
        <% if subject.fixed or !subject.leaf? %>
          <td><%= number_to_currency(subject.ledger_amount, :locale => "jp") %></td>
        <%else%>
          <td><%= link_to number_to_currency(subject.ledger_amount, :locale => "jp") , subject_entry_items_path(:subject_id => subject.id) %></td>
        <%end%>
        <td><%=subject.sort_order%></td>
        <td><%= link_to 'Show', subject %></td>
        <td><%= link_to 'Edit', edit_subject_path(subject) %></td>
        <td><%= link_to 'Destroy', subject, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>


