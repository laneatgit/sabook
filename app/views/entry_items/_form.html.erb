<%= form_for [@subject, @entry_item] do |f| %>
  <% if @entry_item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@entry_item.errors.count, "error") %> prohibited this entry_item from being saved:</h2>

      <ul>
      <% @entry_item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :entry_date %><br>
    <%= f.date_select :entry_date %>
  </div>
  <div class="field">
    <%= f.label :explanation %><br>
    <%= f.text_area :explanation %>
  </div>
  
  <%= fields_for :entry_item_line do |u| %>
   
    <div class="field">
      <%= u.label :subject_id, '相手科目' %><br>
      <%= u.collection_select :subject_id, Subject.all,:id,:name, include_blank: false %>
    </div>

    <div class="field">


      <%= u.label :amount, trading_title_by_direction(@subject.subject_type, @entry_item_line.direction) %><br>

      <%= u.number_field :amount %>
   </div>  

  <% end %>
    

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
