<%= form_for [@subject, @entry_item] do |f| %>
  <% if @entry_item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@entry_item.errors.count, "error") %> prohibited this entry_item from being saved:</h2>

      <ul>
      <% @entry_item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :entry_date %><br>
    <%= f.date_select :entry_date %>
  </div>
  <div class="field">
    <%= f.label :explanation %><br>
    <%= f.text_area :explanation %>
  </div>
  
   <% if @subject.id == @entry_item.credit_subject_id %>
    <div class="field">
      <%= f.label :debit_subject_id %><br>
      <%= f.collection_select :debit_subject_id, Subject.all,:id,:name, include_blank: false %>
    </div>

   <%else%>
     <div class="field">
      <%= f.label :credit_subject_id %><br>
      <%= f.collection_select :credit_subject_id, Subject.all,:id,:name, include_blank: false %>
    </div>


   <%end%>
  
   <div class="field">
      <%= f.label :amount %><br>
      <%= f.number_field :amount %>
   </div>  

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
